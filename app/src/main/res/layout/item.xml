<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Album"
        android:id="@+id/tvAlbum"
        android:textColor="#0d0579" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cancion"
        android:id="@+id/tvCancion"
        android:layout_below="@+id/tvAlbum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#7d49ad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interprete"
        android:id="@+id/tvInterprete"
        android:layout_below="@+id/tvCancion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:textColor="#a942c1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvAlbum2"
        android:layout_alignBaseline="@id/tvAlbum"
        android:layout_alignBottom="@+id/tvAlbum"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCancion2"
        android:layout_alignBaseline="@id/tvCancion"
        android:layout_above="@+id/tvInterprete"
        android:layout_alignLeft="@+id/tvAlbum2"
        android:layout_alignStart="@+id/tvAlbum2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvInterprete2"
        android:layout_alignBaseline="@id/tvInterprete"
        android:layout_alignBottom="@+id/tvInterprete"
        android:layout_centerHorizontal="true" />
</RelativeLayout>